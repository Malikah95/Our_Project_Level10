#: import sm kivy.uix.screenmanager

<Manager>
    transition: sm.FadeTransition()
    LoginWindow:
    Register:
    Personal_Info
    FirstScreen:
    SecondScreen:

<LoginWindow>:
    name: 'Login'

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        height: "40dp" #
        size_hint_y: None

        FloatLayout:


            Label:
                text: "Login"
                pos: 10, 1030
                color: [0.0,0.0,0.0,0.4]
                font_size: 60
                #center_x: (root.width/2)
                #top: (root.top/2) + 550
                #center_y: root.top * 0.9
            Label:
                id: username_label
                text: "Username"
                color: (0,0,0,1)
                font_size: 30
                #right: username_input.x - 60
                #center_y: root.top * 0.6
                pos: 10, 900
            TextInput:
                id: username_input
                background_color: [0.0,0.0,0.0,0.1]
                #background_color: (0,0,0,0.1)
                font_size: 20
                #center_x: root.width * 0.5
                #center_y: root.top * 0.6
                #height: 50
                #width: 350
                size_hint: .9,.9 #width , hieght
                pos: 40, 840
            Label:
                id: password_label
                text: "Password"
                color: (0,0,0,1)
                font_size: 30
                #right: password_input.x - 60
                #center_y: root.top * 0.5
                pos: 10, 740
            TextInput:
                id: password_input
                background_color: [0.0,0.0,0.0,0.1]
                #background_color: (1,1,1,0.1)
                font_size: 20
                password: True
                #center_x: root.width * 0.5
                #center_y: root.top * 0.5
                #height: 50
                #width: 350
                size_hint: .9,.9 #width , hieght
                pos: 40, 680

            Button:
                id: signup_label
                text: "Register"
                font_size: 20
                #color: (0,0,0,1)
                #font_size: 30
                #center_y: root.top * 0.4
                #center_x: root.top * 0.4
                size: (90,35)
                pos: 10, 500  #mean is x,y
                size_hint: .4,.9 #width , hieght
                background_color: [0.0,0.0,0.0,0.4]
                on_release: app.root.current = 'register'

            Button:
                id: login_button
                font_size: 20
                #center_x: root.top * 0.3
                #center_y: root.top * 0.4
                text: "login"
                size: (90,35)
                pos: 400, 500  #mean is x,y
                size_hint: .4,.9 #width , hieght
                #on_press: root.login()
                background_color: [0.0,0.0,0.0,0.4]
                on_release: app.root.current = 'First'
            Label:
                id: success
                # pos: (100,150)
                color: [0.0,0.0,0.0,0.4]
                text: "fail"
                #center_x: root.top * 0.6
                #center_y: root.top * 0.25
                pos:10, 400


